---
export type Props = {
  path: string;
  title: string;
};
const {
  props: { path, title },
} = Astro;

const [yyyy, mm, dd] = path.split("/");
---

<li>
  <article>
    <h2>
      <a href={path}>{title}</a>
    </h2>
    <time datetime={`${yyyy}-${mm}-${dd}`}>{yyyy}/{mm}/{dd}</time>
  </article>
</li>

<style>
  h2 {
    margin-block: 0;
  }
</style>
