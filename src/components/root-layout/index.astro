---
import "./styles.css";

export type Props = {
  pageTitle?: string;
};
const { pageTitle } = Astro.props;
const { origin } = Astro.url;

const { PUBLIC_BASE_PATH, PUBLIC_SITE_TITLE } = import.meta.env;

const title = pageTitle
  ? `${pageTitle} | ${PUBLIC_SITE_TITLE}`
  : PUBLIC_SITE_TITLE;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="leaysgur" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={origin} />
    <meta property="og:title" content={title} />
    <!-- TODO: Remove later -->
    <meta name="robots" content="none" />
    <title>{title}</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href={PUBLIC_BASE_PATH + "/favicon.svg"}
    />
  </head>
  <body>
    <header>
      <nav>
        <a href={PUBLIC_BASE_PATH + "/"}>ホーム</a>
        {" | "}
        <a href={PUBLIC_BASE_PATH + "/archive"}>すべての記事</a>
        {" | "}
        <a href={PUBLIC_BASE_PATH + "/rss.xml"}>RSS</a>
      </nav>
    </header>

    <slot />

    <footer>
      <p>
        ✨ Follow me on <a href="https://github.com/leaysgur">GitHub</a>, <a
          href="https://twitter.com/leaysgur">X(Twitter)</a
        >
      </p>
    </footer>
  </body>
</html>

<style>
  header {
    display: flex;
    justify-content: end;
  }
  footer {
    display: flex;
    justify-content: end;
    border-block-start: var(--size-0) solid var(--border);
  }
</style>
